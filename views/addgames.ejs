<!doctype html>
<html>
<head>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="/admin.css">
<link rel="stylesheet" href="/table.css">
<title>Our Game First Game Admin Add Games</title>
</head>

<body>
<div id="wrapper">

<ul>
   <% if(!currentUser){ %>
	<ul style="text-align:right; float: right"><a href="/login">Login</a></ul>
  <% } else { %>
  <ul style="text-align:right; float: right"><a href="#">Signed in as: <%= currentUser.name %></a></ul>
  <ul style="text-align:right; float: right"><a href="/logout">Logout</a></ul>
  <% } %>
</ul>
</br>

<div class="flashes">
  <% if (flashMessages) { %>
    <% } if (flashMessages.message_auth) { %>
      <div class="auth"><%= flashMessages.message_auth %></div>
    <% } else if (flashMessages.message_shop) { %>
      <div class="shop"><%= flashMessages.message_shop %></div>
    <% } else if (flashMessages.message_bought) { %>
      <div class="bought"><%= flashMessages.message_bought %></div>
    <% } else if (flashMessages.message_checkout) { %>
      <div class="checkout"><%= flashMessages.message_checkout %></div>
  <% } %>
</div>

<h1>
  <div align="center">Our First Game Store Admin Page</div>
</h1>

<nav id="nav">
<ul>
	<li><a href="/adminhome">Home</a></li>
    <li><a href="/allgames">All Games</a></li>
    <li><a href="/addgames">Add Games</a></li>
</ul>
</nav>

<div id="division">
<p>
	<tr style="height: 232px;">
    	<td class="u-table-cell"></td>
    </tr>
</p>
<p>
    <div>
    	<form name="addgames" action="/addgames" onsubmit="return validateForm()" method="POST" required>
  		<div>
           <br><br><br><label for="gameImage">Game Image Filename</label><br>
           <input type="text" placeholder="" id="gameImage" name="gameImage" class="css-input" required>
        </div><br>
        <div>
            <label for="gameTitle">Game Title</label><br>
                        <input type="text" id="gameTitle" name="gameTitle" size="64" maxlength="64" class="css-input" required>
         </div><br>
         <div>
            <label for="gameDesc" class="gameDesc">Game Description</label><br>
            <textarea rows="4" cols="54" id="gameDesc" name="gameDesc" class="css-input" required></textarea>
         </div><br>
         <div>
            <label for="Price" class="Price">Price</label><br>
            <input type="number" step="0.01" id="Price" name="Price" class="css-input" required>
         </div><br>
         <div>
            <label for="Genre" class="Genre">Genre</label><br>
            <input type="text" size="64" placeholder="" id="Genre" name="Genre" class="css-input" required>
         </div><br>
         <div>
            <label for="ReleaseDate" class="ReleaseDate">Release Date</label><br>
            <input type="date" placeholder="ReleaseDate" id="ReleaseDate" name="ReleaseDate" class="css-input" required>
         </div><br>
         <div>
            <button style="margin:5px;" type="submit" name="AddSubmit" class="other-button">Submit</button>
          </form>
          <form action="/allgames" method="GET" class="u-clearfix u-form-spacing-15 u-form-vertical u-inner-form" style="padding: 15px;" source="custom" name="form">
             <button style="margin:5px;" type="cancel" name="cancel" class="other-button">Cancel</button>
             </form>
         </div>
</p>
</div>

<footer id="footer">
  <p>Copyright Â© 2020 Our First Game Store</p>
</footer>
</div>

</body>
</html>
